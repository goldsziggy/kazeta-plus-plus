# Development Dockerfile for Kazeta+ BIOS
# Allows running the BIOS GUI on macOS via Docker + XQuartz

FROM rust:1.92-slim

# Install all required dependencies
RUN apt-get update && apt-get install -y \
    # X11 and GUI
    libx11-dev \
    libxcursor-dev \
    libxrandr-dev \
    libxi-dev \
    libxinerama-dev \
    libgl1-mesa-dev \
    libglu1-mesa-dev \
    mesa-utils \
    libgl1-mesa-dri \
    libglx-mesa0 \
    # Virtual display
    xvfb \
    x11vnc \
    # Audio
    libasound2-dev \
    # D-Bus (for Bluetooth)
    libdbus-1-dev \
    dbus \
    # udev (for gamepad/controller support)
    libudev-dev \
    # Build tools
    pkg-config \
    clang \
    cmake \
    # SSL/TLS
    libssl-dev \
    openssl \
    ca-certificates \
    # FFmpeg
    libavcodec-dev \
    libavformat-dev \
    libavutil-dev \
    libswscale-dev \
    libavfilter-dev \
    libavdevice-dev \
    libswresample-dev \
    # Optional but useful
    git \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /workspace

# Copy the project
COPY . .

# Copy entrypoint script
COPY docker-entrypoint.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/docker-entrypoint.sh

# Set environment
ENV DISPLAY=:99
ENV RUST_BACKTRACE=1

# Expose VNC port
EXPOSE 5900

# Use entrypoint script
ENTRYPOINT ["/usr/local/bin/docker-entrypoint.sh"]
